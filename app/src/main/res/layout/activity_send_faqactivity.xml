<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activitys.SendFAQActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/dp_4"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sendfaq_activity_back_img"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    app:srcCompat="?attr/homeAsUpIndicator"
                    app:tint="@color/material_500" />

                <TextView
                    android:layout_width="255dp"
                    android:layout_height="match_parent"
                    android:text="@string/send_label"
                    android:textColor="@color/material_500"
                    android:textSize="@dimen/dp_20"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>


        <MultiAutoCompleteTextView
            android:id="@+id/sendfaq_activity_title_edt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/custom_border"
            android:ems="10"
            android:hint="@string/title"
            android:inputType="textPersonName"
            android:paddingLeft="@dimen/dp_5" />


        <MultiAutoCompleteTextView

            android:id="@+id/sendfaq_activity_content_multi"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/custom_border"
            android:hint="Content"
            android:paddingLeft="@dimen/dp_5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendfaq_activity_send_appcompatbtn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="415dp"
            android:background="@drawable/background_radius"
            android:backgroundTint="@color/material_500"
            android:text="Send"
            android:textAlignment="center"
            android:textColor="@color/white" />


    </LinearLayout>
</layout>