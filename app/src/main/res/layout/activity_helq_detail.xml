<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.HelqDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="@dimen/dp_4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/helpdetail_activity_back_img"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                app:srcCompat="?attr/homeAsUpIndicator"
                app:tint="@color/material_500" />

            <TextView
                android:id="@+id/helpdetail_activity_title_txt"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:text="@string/help_label"
                android:textColor="@color/material_500"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/helq_detail_activity_body_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="10"
        android:text="How to access Programs?"
        android:textColor="@color/black"
        android:textSize="20dp" />
</LinearLayout>