<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryLight" format="color" />
    <attr name="colorToolbar" format="color" />
    <attr name="colorToolbarText" format="color" />
    <attr name="colorToolbarIcon" format="color" />
    <attr name="colorIcon" format="color" />
    <attr name="colorIconItem" format="color" />
    <attr name="colorButton" format="color" />
    <attr name="colorLayout" format="color" />
    <attr name="colorCardLayout" format="color" />
    <attr name="colorText" format="color" />
    <attr name="colorTextLight" format="color" />
    <attr name="colorTextHint" format="color" />
    <attr name="colorDialogLayout" format="color" />
    <attr name="colorDivider" format="color" />

    <!-- SweetDialog 3dAnimation-->
    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0" />
            <enum name="y" value="1" />
            <enum name="z" value="2" />
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="valuePivotX" format="fraction" />
        <attr name="valuePivotY" format="fraction" />
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <!-- LabelView -->
    <declare-styleable name="LabelView">
        <attr name="backgroundColor" format="color" />
        <attr name="textTitleColor" format="color" />
        <attr name="textContentColor" format="color" />
        <attr name="textTitle" format="string" />
        <attr name="textContent" format="string" />
        <attr name="textTitleSize" format="dimension" />
        <attr name="textContentSize" format="dimension" />
        <attr name="labelTopPadding" format="dimension" />
        <attr name="labelCenterPadding" format="dimension" />
        <attr name="labelBottomPadding" format="dimension" />
        <attr name="labelTopDistance" format="dimension" />
        <attr name="textTitleStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>
        <attr name="textContentStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>
        <attr name="direction">
            <enum name="leftTop" value="-45" />
            <enum name="rightTop" value="45" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BaseRecyclerView">
        <attr name="brv_padding" format="dimension" />
        <attr name="brv_padding_start" format="dimension" />
        <attr name="brv_padding_end" format="dimension" />
        <attr name="brv_padding_top" format="dimension" />
        <attr name="brv_padding_bottom" format="dimension" />
        <attr name="brv_enable_refresh" format="boolean" />
        <attr name="brv_text_no_result" format="string|reference" />
    </declare-styleable>

</resources>
